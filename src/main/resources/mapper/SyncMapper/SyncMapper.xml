<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
     PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
     "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nexmotion.sync.SyncMapper">

    <resultMap id="getchgdate" type="com.nexmotion.sync.SyncVO">
        <result column= "chgstartdate" property= "chgstartdate" javaType="java.sql.Date" />
        <result column= "chgenddate" property= "chgenddate" javaType="java.sql.Date" />
    </resultMap>

    <select id= "getChgDate" resultType="com.nexmotion.sync.SyncVO">
        /*ManagerMapper.getchgdate Query*/
        SELECT chgstartdate
              ,chgenddate
        FROM syncdata
    </select>

    <update id="updateChgDate" parameterType="com.nexmotion.sync.SyncVO">
        /*ManagerMapper.updateChgDate Query*/
        UPDATE syncdata
           SET chgstartdate = #{chgenddate}
    </update>

    <delete id="truncateAccount">
        /*ManagerMapper.truncateAccount Query*/
        TRUNCATE
           TABLE account
    </delete>

    <delete id="truncateOrganization">
        /*ManagerMapper.truncateOrganization Query*/
        TRUNCATE
            TABLE VI_GVOF_MS
    </delete>


</mapper>